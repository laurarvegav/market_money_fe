<html>
<head>
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}
</style>
</head>
<body>

<h1>Markets</h1>
<section class="markets">
  <table style="width:80%">
    <tr>
      <th style="background-color:grey; color: white;">Name</th>
      <th style="background-color:grey; color: white;">City</th>
      <th style="background-color:grey; color: white;">State</th>
      <th style="background-color:grey; color: white;"></th>
    </tr>
    <% @markets.each do |market| %>
      <tr>
        <div id="market-<%= market.id%>">
          <td><%= market.name %></td>
          <td><%= market.city %></td>
          <td><%= market.state %></td>
          <td><%= button_to "More info", href: market_path(market) %></td>
        </div>
      </tr>
    <% end %>
  </table>
</section>

</body>